<nav id="navbar"
     class="fixed top-0 left-0 w-full bg-transparent shadow-none z-50 transition-all duration-300">
  <div class="max-w-6xl mx-auto px-4 flex justify-between items-center h-16">
    <!-- Logo -->
    <a href="/" id="logo" class="font-serif text-xl font-bold text-[#d4ae6d]">
      Paula Echeguia
    </a>

    <!-- Botón hamburguesa (solo móvil) -->
    <button id="menu-btn" class="md:hidden text-3xl text-[#d4ae6d] focus:outline-none">
      ☰
    </button>

    <!-- Menú escritorio -->
    <div id="menu" class="hidden md:flex space-x-6">
      <a href="/" class="hover:underline text-[#d4ae6d]">Home</a>
      <a href="/about" class="hover:underline text-[#d4ae6d]">About</a>
      <a href="/insights" class="hover:underline text-[#d4ae6d]">Insights</a>
      <a href="/contact" class="hover:underline text-[#d4ae6d]">Contact</a>
      <a href="[CHANGEME]" target="_blank" rel="noopener"
         class="ml-4 px-4 py-2 bg-black text-white rounded-2xl hover:bg-[#d4ae6d] hover:text-black">
         Search Businesses
      </a>
    </div>
  </div>

  <!-- Panel lateral móvil -->
  <div id="mobile-panel"
       class="fixed top-0 right-0 h-full w-64 bg-white text-black transform translate-x-full transition-transform duration-300 ease-in-out md:hidden z-50 p-6 space-y-6">
    <a href="/" class="block hover:underline">Home</a>
    <a href="/about" class="block hover:underline">About</a>
    <a href="/insights" class="block hover:underline">Insights</a>
    <a href="/contact" class="block hover:underline">Contact</a>
    <a href="[CHANGEME]" target="_blank" rel="noopener"
       class="block mt-4 px-4 py-2 bg-black text-white rounded-2xl hover:bg-[#d4ae6d] hover:text-black text-center">
       Search Businesses
    </a>
  </div>

  <!-- Overlay oscuro (más opacidad para mayor contraste) -->
  <div id="overlay"
       class="fixed inset-0 bg-black bg-opacity-90 hidden md:hidden z-40"></div>
</nav>

<script is:inline>
document.addEventListener("DOMContentLoaded", () => {
  const navbar      = document.querySelector("#navbar");
  const hero        = document.querySelector("#main"); // sección hero opcional
  const btn         = document.querySelector("#menu-btn");
  const mobilePanel = document.querySelector("#mobile-panel");
  const overlay     = document.querySelector("#overlay");

  // --- Menú lateral móvil ---
  btn?.addEventListener("click", () => {
    mobilePanel.classList.remove("translate-x-full");
    overlay.classList.remove("hidden");
  });

  // Cerrar al tocar fuera del menú
  overlay?.addEventListener("click", () => {
    mobilePanel.classList.add("translate-x-full");
    overlay.classList.add("hidden");
  });

  // --- Cambio de navbar al hacer scroll (global) ---
  function updateNavbar() {
    if (!navbar) return;
    const trigger = hero ? hero.offsetHeight : 50;

    if (window.scrollY >= trigger) {
      navbar.classList.remove("bg-transparent", "shadow-none");
      navbar.classList.add("bg-white", "shadow-lg");
      navbar.querySelectorAll("a").forEach(a => {
        if (!a.classList.contains("bg-black")) {
          a.classList.remove("text-[#d4ae6d]");
          a.classList.add("text-black");
        }
      });
    } else {
      navbar.classList.remove("bg-white", "shadow-lg");
      navbar.classList.add("bg-transparent", "shadow-none");
      navbar.querySelectorAll("a").forEach(a => {
        if (!a.classList.contains("bg-black")) {
          a.classList.remove("text-black");
          a.classList.add("text-[#d4ae6d]");
        }
      });
    }
  }

  window.addEventListener("scroll", updateNavbar);
  window.addEventListener("resize", updateNavbar);
  updateNavbar(); // inicial
});
</script>


