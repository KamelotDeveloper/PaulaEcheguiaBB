<section class="max-w-lg mx-auto p-6 ">
    <h1 class="font-serif text-4xl mb-6 mt-24 ">Contact</h1>

    <form name="contact" method="POST" data-netlify="true"
          netlify-honeypot="bot-field"
          class="grid gap-4">
      <!-- Campo oculto para Netlify -->
      <input type="hidden" name="form-name" value="contact" />
      <!-- Honeypot anti-spam -->
      <p class="hidden">
        <label>Don’t fill this out: <input name="bot-field" /></label>
      </p>

      <input type="text" name="name" placeholder="Name" required
             class="border p-3 rounded-2xl"/>
      <input type="text" name="phone" placeholder="Phone" required
             class="border p-3 rounded-2xl"/>
      <input type="email" name="email" placeholder="Email" required
             class="border p-3 rounded-2xl"/>
      <textarea name="message" placeholder="Message" required
                class="border p-3 rounded-2xl"></textarea>
      <button type="submit"
              class="bg-black text-white px-6 py-3 rounded-2xl hover:bg-gray-800">
        Send
      </button>
    </form>
    <style>
  /* Define la animación fadeInLeft */
  @keyframes fadeInLeft {
    0% {
      opacity: 0;
      transform: translateX(-20px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  /* Aplica la animación a una clase personalizada */
  .fade-in-left {
    animation: fadeInLeft 1.5s ease-out forwards;
  }
  </style>
  </section>