<section class="max-w-lg mx-auto p-6 fade-in-left">
  <h1 class="font-serif text-4xl mb-6 mt-24">Contact</h1>

  <form action="https://formsubmit.co/paula@southfloridama.com"
        method="POST"
        class="grid gap-4">
    <!-- Redirección tras envío (opcional) -->
    <input type="hidden" name="_next" value="/gracias" />
    <!-- Desactiva captcha de FormSubmit si no lo querés -->
    <input type="hidden" name="_captcha" value="false" />

    <input type="text" name="name" placeholder="Name" required
           class="border p-3 rounded-2xl"/>
    <input type="text" name="phone" placeholder="Phone" required
           class="border p-3 rounded-2xl"/>
    <input type="email" name="email" placeholder="Email" required
           class="border p-3 rounded-2xl"/>
    <textarea name="message" placeholder="Message" required
              class="border p-3 rounded-2xl"></textarea>

    <button type="submit"
            class="bg-black text-white px-6 py-3 rounded-2xl hover:bg-gray-800">
      Send
    </button>
  </form>
</section>

