<section
  id="main"
  class="relative min-h-screen flex items-center justify-center bg-black text-white px-6 pt-16 overflow-hidden"
>
  <!-- VIDEO DE FONDO -->
  <video
    autoplay
    muted
    loop
    playsinline
    class="absolute inset-0 w-full h-full object-cover"
  >
    <source src="/portada.mp4" type="video/mp4" />
    <!-- Fallback para navegadores sin soporte -->
  </video>

  <!-- CAPA OSCURA PARA CONTRASTE -->
  <div class="absolute inset-0 bg-black/50"></div>

  <!-- CONTENIDO HERO (arranca oculto) -->
  <div
    id="hero-content"
    class="relative z-10 max-w-3xl text-center
           opacity-0 translate-y-6
           transition-all duration-1000"
  >
    <img
      src="https://firebasestorage.googleapis.com/v0/b/canteras-nini.appspot.com/o/PaulaBB%2FLogoPE.png?alt=media&token=9a75ee1f-a1bb-4e07-8052-f8e4de82fbd5"
      alt="Paula Echeguia Business Broker"
      class="w-72 sm:w-80 max-w-xl h-auto object-contain mx-auto"
    />

    <div class="mt-6 flex flex-col md:flex-row justify-center gap-4">
      <a
        target="_blank"
        href="Listings Paula"
        class="px-6 py-3 bg-white text-black rounded-2xl hover:bg-[#d4ae6d]"
      >
        Search Businesses
      </a>
      <a
        href="/contact"
        class="px-6 py-3 border border-white rounded-2xl hover:bg-[#d4ae6d]"
      >
        Contact Paula
      </a>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const navbar = document.getElementById("navbar");
      const heroContent = document.getElementById("hero-content");

      if (navbar) {
        // Navbar arranca oculto para evitar flash
        navbar.classList.add(
          "transition-all",
          "duration-700",
          "-translate-y-10",
          "opacity-0"
        );
        requestAnimationFrame(() => {
          navbar.classList.remove("-translate-y-10", "opacity-0");
          navbar.classList.add("translate-y-0", "opacity-100");
        });
      }

      if (heroContent) {
        // Hero arranca oculto y se muestra suave
        requestAnimationFrame(() => {
          heroContent.classList.remove("opacity-0", "translate-y-6");
          heroContent.classList.add("opacity-100", "translate-y-0");
        });
      }
    });
  </script>
</section>


