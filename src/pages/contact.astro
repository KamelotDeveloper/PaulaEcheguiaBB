---
import Base from "../layouts/Base.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import Formulario from "../components/Formulario.astro";
---

<Base>
  <Nav />
  <Formulario />

  <!-- Sección Let's Talk -->
  <section class="mt-12 px-4">
    <h3 class="font-serif text-3xl text-center mb-6">Let's talk</h3>
    <div class="flex flex-col md:flex-row justify-center items-center gap-4 text-center md:text-left">
      <p class="font-sans text-lg">
        <strong>E-Mail:</strong> paula@southfloridama.com
      </p>
      <p class="font-sans text-lg">
        <strong>Cell:</strong> +1 (786) 720-9627
      </p>
    </div>
  </section>

  <!-- Sección Social Media -->
  <section class="mt-12 mb-12 px-4">
    <h3 class="font-serif text-3xl text-center mb-8">Social Media</h3>
    <div class="flex justify-center gap-8">
      <!-- Instagram -->
      <a
        target="_blank"
        href="https://www.instagram.com/paulaecheguiabroker/"
        class="hover:scale-110 transition-transform"
      >
        <span class="inline-block w-8 h-8 md:w-10 md:h-10">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" width="100%" height="100%">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="#d4ae6d" stroke-width="1.6" fill="none"/>
            <circle cx="12" cy="11.5" r="3" stroke="#d4ae6d" stroke-width="1.6" fill="none"/>
            <circle cx="17.2" cy="6.8" r="0.9" fill="#d4ae6d"/>
          </svg>
        </span>
      </a>

      <!-- Facebook -->
      <a
        target="_blank"
        href="#"
        class="hover:scale-110 transition-transform"
      >
        <span class="inline-block w-8 h-8 md:w-10 md:h-10">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="100%" height="100%" fill="none">
            <rect x="2" y="2" width="20" height="20" rx="4" ry="4" stroke="#d4ae6d" stroke-width="1.6" fill="none"/>
            <path d="M15.5 3H13c-2.76 0-4 1.79-4 4v2H6v3h3v7h3v-7h2.21l.79-3H12V7.2c0-.86.4-1.2 1.28-1.2H16V3z" fill="#d4ae6d"/>
          </svg>
        </span>
      </a>

      <!-- LinkedIn -->
      <a
        target="_blank"
        href="https://www.linkedin.com/in/paula-echeguia-b707b334b/"
        class="hover:scale-110 transition-transform"
      >
        <span class="inline-block w-8 h-8 md:w-10 md:h-10">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" width="100%" height="100%">
            <!-- Contorno cuadrado -->
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke="#d4ae6d" stroke-width="1.6" fill="none"/>
            <!-- Línea vertical (la “i” de in) -->
            <rect x="7" y="10" width="2" height="7" fill="#d4ae6d"/>
            <circle cx="8" cy="7" r="1" fill="#d4ae6d"/>
            <!-- Parte derecha (texto/link) -->
            <path d="M12 10h2v1c.3-.5.9-1 2-1 1.7 0 3 1.2 3 3.5V17h-2v-3.4c0-1.2-.5-2-1.6-2-1 0-1.4.8-1.4 2V17h-2v-7z" fill="#d4ae6d"/>
          </svg>
        </span>
      </a>
    </div>
  </section>

  <Footer />
</Base>
